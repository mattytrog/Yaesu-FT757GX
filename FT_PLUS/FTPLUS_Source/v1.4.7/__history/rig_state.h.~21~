void update_buffers(int32 value)
{
   int8 state = get_state();
   if(state == 1) {storage_buffer[1] = value; storage_buffer[1] = load_band_vfo_f (1, band);}
   if(state == 2) {storage_buffer[2] = value; storage_buffer[0] = load_band_vfo_f (0, band);}
   if(state == 3) storage_buffer[3] = value;
   if(state == 4) storage_buffer[4] = value;
}

